{
  "name": "perplexport",
  "version": "1.0.0",
  "description": "Export Perplexity conversations as markdown files",
  "main": "dist/index.js",
  "bin": {
    "perplexport": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "ts-node src/index.ts",
    "dev": "ts-node-dev --respawn src/index.ts",
    "prepublishOnly": "npm run build",
    "postinstall": "echo 'Skipping chmod on Windows'",
    "package": "pkg ."
  },
  "keywords": [
    "perplexity",
    "export",
    "markdown",
    "cli",
    "conversation",
    "backup",
    "automation"
  ],
  "author": "Leonid Shevtsov <leonid@shevtsov.me>",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.0.0",
    "puppeteer-core": "^21.1.1",
    "turndown": "^7.1.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "pkg": "^5.8.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": "node_modules/**/*",
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist"
  }
}